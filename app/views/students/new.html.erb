<h2>New student</h2>

<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation" class="error">
      <h2>Error found from being saved: <%= pluralize(@student.errors.count, "error") %> </h2>

      <ul>
        <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :course %><br>
    <%= f.text_field :course %>
  </div>
  <div class="field">
    <%= f.label :roll_no %><br>
    <%= f.number_field :roll_no %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', students_path %>